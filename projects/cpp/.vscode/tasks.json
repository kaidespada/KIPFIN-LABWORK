{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build with CMake",
            "type": "shell",
            "command": "cd ${workspaceFolder}/build && cmake .. && make",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Compile single file",
            "type": "shell",
            "command": "g++ -std=c++17 -g ${file} -o ${fileDirname}/${fileBasenameNoExtension}",
            "group": "build",
            "problemMatcher": []
        }
    ]
}